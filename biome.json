{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["src/**"]
	},
	"overrides": [
		{
			"includes": [
				"src/styles.css",
				"src/routeTree.gen.ts",
				".tanstack/**",
				".wrangler/**",
				"dist/**",
				".output/**",
				"public/**",
				"tests/**",
				".github/**",
				".husky/**",
				"registry/**"
			],
			"linter": {
				"enabled": false
			},
			"formatter": {
				"enabled": false
			}
		}
	],
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"correctness": {
				"useUniqueElementIds": "off",
				"noChildrenProp": "off"
			},
			"a11y": {
				"useSemanticElements": "off",
				"useAriaPropsForRole": "off",
				"useFocusableInteractive": "off",
				"useKeyWithClickEvents": "off",
				"noStaticElementInteractions": "off"
			}
		},
		"includes": ["src/**/*", ".vscode/*", "index.html", "vite.config.js"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"css": {
		"parser": {
			"allowWrongLineComments": true,
			"cssModules": true
		},
		"linter": {
			"enabled": false
		},
		"assist": {
			"enabled": false
		},
		"formatter": null
	}
}
